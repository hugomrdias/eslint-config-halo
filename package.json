{
  "name": "eslint-config-halo",
  "version": "1.4.0",
  "description": "ESlint shareable config for Halo",
  "license": "MIT",
  "repository": "hugomrdias/eslint-config-halo",
  "author": {
    "name": "Hugo Dias",
    "email": "mail@hugodias.me",
    "url": "hugodias.me"
  },
  "keywords": [
    "eslintconfig",
    "halo",
    "code",
    "quality",
    "style",
    "lint",
    "linter",
    "jscs",
    "jshint",
    "jslint",
    "eslint",
    "validate",
    "code style",
    "standard",
    "strict",
    "check",
    "checker",
    "verify",
    "enforce",
    "hint",
    "simple"
  ],
  "engines": {
    "node": ">=0.12.0"
  },
  "main": "index.js",
  "scripts": {
    "release:patch": "npm version patch -m \"chore(release): Bump to %s\"",
    "release:minor": "npm version minor -m \"chore(release): Bump to %s\"",
    "release:major": "npm version major -m \"chore(release): Bump to %s\"",
    "postversion": "npm publish && git push --follow-tags",
    "test": "eslint --cache --fix index.js"
  },
  "devDependencies": {
    "eslint": "~2.11.0"
  },
  "peerDependencies": {
    "eslint": ">=2"
  }
